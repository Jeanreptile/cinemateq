  section#searchBarPosition.hbox.stretch
    section#content
        section.vbox
            section
                form(ng-submit='submitSearchQuery(false)')
                  .input-group.searchBarStyle.centerWidth.animated.fadeInUp
                    //.icon-addon.addon-lg
